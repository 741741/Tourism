/* 热门话题开始 */
.topic{
  border-bottom: 1px solid #EBECEE;
  padding:11px;
  display: flex;
  justify-content: flex-start;
  align-content: center;
}
.Hot_topic{
  margin-right: 10px; 
}
.hot{ 
  color: #06A0E0;
  position: relative;
}
.hot::after{
  content: "";
    position: absolute;
    left: 50%;
    bottom: -15px;
    display: block;
    width: 8px;
    height: 8px;
    margin-left: -4px;
    border-right: 1px solid #e6e8ea;
    border-bottom: 1px solid #e6e8ea;
    background-color: #fff;
    -webkit-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
}
.active{
  display: block !important;
}
.sation{
  font-size: 12px;
  border-bottom: 1px solid #EBECEE;
  padding:11px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: none;  
}
/* 热门话题结束 */

/* 兴趣小组开始 */
.title{
  font-weight: bold;
  border-top: 1px solid #EBECEE;
}
.group{
  overflow: hidden;
  padding: 0 10px;
  margin-bottom:10px;
}
.small{
  float: left;
  border-bottom: 1px solid #EBECEE;
  min-width: 33%;
  height: 45px;
  padding: 15px 25px;
  overflow: hidden;
}
.small:nth-child(odd) {
   border-right: 1px solid #EBECEE;
}
.small image{
  width: 44px;
  height: 44px;
  margin-right: 7px;
  float: left;
  max-width: 100%;
}
.txt{
  font-size: 12px;
  display: table-cell;
  vertical-align: middle;
  height: 40px;
  float: left;
  line-height:40px;
}
/* 兴趣小组结束 */