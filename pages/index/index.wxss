.travel{
  width: 100%;
  height: auto;
  background: #F1F2F6;
}
.travel_header{
  text-align: center;
  padding-top: 10px;
}

/* 滚动开始 */
.animation{
  width: 100%;
  height: 125px;
  background: paleturquoise;
  paddimg-top: 10px; 
  overflow: hidden;
}
.swiper-item{
 width: 100%;
 height: 125px;
 background: pink; 
 text-align: center;
 line-height: 150px;
}
.travel_img{
  width: 100px;
  height: 100px;
  margin-top: 30px;
  margin-right: 30px;
  float: right;
}

 image{
  width: 100%;
  height: 100%;
  /* border-radius: 50%;
  border:1px solid palegreen; */
}
.weui-cell_switch{
  padding-top:6px;
  padding-bottom:6px;
}
.weui-cell{
  padding:10px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.weui-cell__bd{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
}
.weui-cell__ft{
  text-align:right;
  color:#999999;
}
/* 滚动结束 */
.tu_cont{
  background: #fff;
  padding-bottom: 20px;
  display: flex;
  justify-content: space-around;
  align-content: space-around;
}
.travel_content_tu{
  text-align: center;
}
.wind_img{
  width: 50px;
  height: 50px; 
  margin-top:20px;
  background: powderblue;
  border-radius: 50%;
  z-index: 1;
}
.wind_imgs{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  position: relative;
}
.wind_imgs image{
  position: absolute;
  top: 33%;
  left: 32%;
}
.num{
 font-size: 12px;
 text-align: center;
}

/* 为您推荐开始 */
.recommended{
  background: #fff;
  margin-top: 10px;
  padding: 8px 10px;
  margin-bottom: 10px;
}
.recommended_title{
  display: flex;
  justify-content: space-between;
  align-content: center;
  border-left: 3px solid #06A0E0;
  border-radius: 3px;
  padding-left: 10px;
}
.more{
  color: #4B4B4B;
}
.diagram{
  margin-top: 20px;
  overflow: hidden;
}
.diagram_img{
  width: 46%;
  height: 130px;
  background: #06A0E0;
  float: left;
  margin-right: 10px;
  margin-bottom: 10px;
  position: relative;
}
